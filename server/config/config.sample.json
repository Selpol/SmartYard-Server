{
  "language": "ru",
  "api": {
    "frontend": "${API_FRONTEND}",
    "asterisk": "${API_ASTERISK}",
    "internal": "${API_INTERNAL}",
    "private": "${API_PRIVATE}",
    "mobile": "${API_MOBILE}"
  },
  "mobile": {
    "web_server_base_path": "${MOBILE_STATIC}",
    "support_phone": "${MOBILE_PHONE_SUPPORT}",
    "phonePattern": "${MOBILE_PHONE_PATTERN}",
    "time_zone": "${MOBILE_TIMEZONE}"
  },
  "db": {
    "dsn": "pgsql:host=${DB_HOST};port=${DB_PORT};dbname=${DB_DATABASE}",
    "username": "${DB_USERNAME}",
    "password": "${DB_PASSWORD}"
  },
  "redis": {
    "host": "${REDIS_HOST}",
    "port": "${REDIS_PORT}",
    "cache_ttl": 3600,
    "max_allowed_tokens": 15,
    "token_idle_ttl": 3600
  },
  "amqp": {
    "host": "${AMQP_HOST}",
    "port": "${AMQP_PORT}",
    "username": "${AMQP_USERNAME}",
    "password": "${AMQP_PASSWORD}"
  },
  "backends": {
    "authentication": {
      "backend": "internal"
    },
    "authorization": {
      "backend": "allow"
    },
    "users": {
      "backend": "internal"
    },
    "geocoder": {
      "backend": "dadata",
      "token": "${BACKEND_GEOCODER_DADATA}"
    },
    "files": {
      "backend": "mongo"
    },
    "addresses": {
      "backend": "internal"
    },
    "households": {
      "backend": "internal"
    },
    "cameras": {
      "backend": "internal"
    },
    "isdn": {
      "backend": "${BACKEND_ISDN_BACKEND}",
      "endpoint": "${BACKEND_ISDN_ENDPOINT}",
      "secret": "${BACKEND_ISDN_SECRET}",
      "confirm_method": "outgoingCall"
    },
    "inbox": {
      "backend": "clickhouse"
    },
    "plog": {
      "backend": "clickhouse",
      "host": "${BACKEND_PLOG_HOST}",
      "port": "${BACKEND_PLOG_PORT}",
      "database": "${BACKEND_PLOG_DATABASE}",
      "username": "${BACKEND_PLOG_USERNAME}",
      "password": "${BACKEND_PLOG_PASSWORD}",
      "time_shift": "60",
      "max_call_length": "120",
      "ttl_temp_record": "86400",
      "ttl_camshot_days": "180",
      "back_time_shift_video_shot": "3",
      "cron_process_events_scheduler": "minutely"
    },
    "configs": {
      "backend": "json"
    },
    "dvr": {
      "backend": "internal",
      "servers": [
        {
          "title": "Local server",
          "type": "nimble or flussonic or  or trassir",
          "url": "https://video.server.hostname:8443",
          "token": "<!-- mediaserver security token here (only if you use it) --!>"
        }
      ]
    },
    "dvr_exports": {
      "backend": "mongo",
      "dvr_files_ttl": 259200
    },
    "sip": {
      "backend": "internal",
      "servers": [
        {
          "title": "First server",
          "type": "asterisk",
          "trunk": "first",
          "ip": "<!-- your asterisk external ip here --!>"
        }
      ],
      "stuns": [
        "stun:stun.l.google.com:19302"
      ]
    },
    "frs": {
      "backend": "internal",
      "open_door_timeout": 10,
      "cron_sync_data_scheduler": "5min",
      "servers": [
        {
          "title": "First server",
          "url": "http://127.0.0.1:9051"
        }
      ]
    },
    "mqtt": {
      "backend": "internal",
      "agent": "${BACKEND_MQTT_AGENT}",
      "ws": "${BACKEND_MQTT_WS}",
      "mqtt": "${BACKEND_MQTT_WSS}",
      "username": "${BACKEND_MQTT_USERNAME}",
      "password": "${BACKEND_MQTT_PASSWORD}"
    },
    "oauth": {
      "backend": "internal",
      "public_key": "${BACKEND_OAUTH_PUBLIC_KEY}",
      "audience": "${BACKEND_OAUTH_AUDIENCE}"
    }
  },
  "syslog_servers": {
    "beward": [
      "syslog.udp:127.0.0.1:45450"
    ],
    "beward_ds": [
      "syslog.udp:127.0.0.1:45451"
    ],
    "qtech": [
      "syslog.udp:127.0.0.1:45452"
    ],
    "is": [
      "syslog.udp:127.0.0.1:45453"
    ],
    "hikvision": [
      "syslog.udp:127.0.0.1:45454"
    ],
    "akuvox": [
      "syslog.udp:127.0.0.1:45455"
    ],
    "rubetek": [
      "syslog.udp:192.168.13.60:45456"
    ]
  },
  "ntp_servers": [
    "ntp:127.0.0.1:123"
  ]
}
